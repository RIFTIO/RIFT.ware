# Makefile for YANG Converter Application
#  
#   yangdump application directory
#
# Convert a YANG or NCX module to different formats such as XSD

############### SOURCE PROFILE ##############################

SUBDIR_NM=yangdiff
SUBDIR_CPP=-I../yangdiff

############### TARGET PROFILE ##############################

TARGET=$(TBASE)/$(SUBDIR_NM)
BIN_INST=$(TBASE)/bin
REAL_INST=$(DESTDIR)$(PREFIX)/bin
PROG=yangdiff

##################### LIBRARIES ########################

# The order of these LIBS matters!
#
# If the linker can't find external symbols you know should
# be there and you get an Unresolved External error 
#   file foo : unresolved external to bar
# Then put the library that contains 'foo' BEFORE the one
# that contains 'bar'. 


LIBS = -lncx -lxml2 -lz -lm

LIBTARGS= $(LBASE)/libncx.$(LIBNCXSUFFIX)

############################# MAKE RULES ##################
ifdef DEVELOPER
all:
else
all: yangdiff
endif  # DEVELOPER

#################### PLATFORM DEFINITIONS ############
include ../platform/platform.profile

################ DEPENDENCIES #########################
# depend rule must be included after the 'all' make rule

include ../platform/platform.profile.depend


test:


# needs to be done by root
install:
ifndef DEVELOPER
	mkdir -p $(REAL_INST)
	install $(OWNER) $(GRP) $(BIN_INST)/$(PROG) $(REAL_INST)
endif  # DEVELOPER

uninstall:
	rm -f  $(REAL_INST)/$(PROG)


# this real test rule keeps make from deleting the $(OBJS) as
# intermediate files
yangdiff: $(OBJS) $(LIBTARGS)
	$(LINK) $(CFLAGS) $(LFLAGS) $(OBJS) -o $(BIN_INST)/$(PROG) $(LPATH) $(FPATH) $(LIBS)

clean:
	rm -f $(OBJS) $(BIN_INST)/$(PROG)

superclean:
	rm -f *~  $(DEPS) dependencies $(OBJS) $(BIN_INST)/$(PROG)

distclean: superclean

.PHONY: yangdiff

# prevent the make program from choking on all the symbols
# that get generated from autogenerated make rules
.NOEXPORT:

include ./dependencies
