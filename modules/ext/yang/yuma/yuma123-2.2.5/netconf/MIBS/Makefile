# Makefile for NETCONF project
#  
#   MIBS directory

############### SOURCE PROFILE ##############################

SUBDIR_NM=MIBS
SMIDUMP=$(DESTDIR)$(PREFIX)/local/bin/smidump
SUBDIR_CPP=""


############### TARGET PROFILE ##############################

TARGET=../modules/ietf

PLAINS = $(patsubst %.txt,%,$(wildcard *.txt))

YANGS = $(patsubst %,$(TARGET)/%.yang,$(wildcard *-*))

$(TARGET)/%.yang: %
	$(SMIDUMP) -f yang --yang-smi-extensions --yang-indent 3 --output $@ ./$< 

%: %.txt
	mv $< $@



######################### MAKE RULES ######################

all: mibs


test:


install:

##plains: $(PLAINS)


mibs: $(YANGS)


clean:
	rm -f $(YANGS)

superclean:
	rm -f *~ $(YANGS)


# prevent the make program from choking on all the symbols
# that get generated from autogenerated make rules
.NOEXPORT:
