# Makefile for Yuma man directory
#  
#   man directory

ifndef PREFIX
    PREFIX=/usr
endif

MAN_INSTALL = $(DESTDIR)$(PREFIX)/share/man/man1

WEB_INSTALL = $(DESTDIR)/$(HOME)/MAN_WEBPAGES

ifdef DEBIAN
ifdef DEVELOPER
MAN_FILES= make_sil_dir.1
else
MAN_FILES = yangdump.1 yangdiff.1 yangcli.1 \
	netconfd.1 netconf-subsystem.1
endif  # DEVELOPER
else
MAN_FILES = yangdump.1 yangdiff.1 yangcli.1 \
	netconfd.1 netconf-subsystem.1 make_sil_dir.1
endif  # DEBIAN


all:

depend:

clean:

superclean:

uninstall:
	for fil in $(MAN_FILES); do \
	  rm -f $(MAN_INSTALL)/$$fil.gz;\
	done

install:
	mkdir -p $(MAN_INSTALL)
	for fil in $(MAN_FILES); do \
	  gzip -c $$fil > $(MAN_INSTALL)/$$fil.gz;\
	done

webinstall:
	mkdir -p $(WEB_INSTALL)
	for fil in $(MAN_FILES); do \
	  groff -mandoc -mwww -Thtml $$fil > $(WEB_INSTALL)/$$fil.html;\
	done

distclean: superclean


.PHONY: all clean depend superclean install distclean uninstall webinstall

# prevent the make program from choking on all the symbols
# that get generated from autogenerated make rules
.NOEXPORT:



